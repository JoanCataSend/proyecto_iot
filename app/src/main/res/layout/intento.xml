<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_claro"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="24dp"
        android:clipToPadding="false"
        android:layout_gravity="top">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="64dp">

            <LinearLayout
                android:id="@+id/headerBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="KöVa"
                    android:textColor="@color/icono_normal"
                    android:fontFamily="@font/montserrat_bold_ttf"
                    android:textSize="26sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vehicleSelector"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:background="@drawable/bg_pill_soft"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_escudo"
                    app:tint="@color/icono_normal"
                    android:contentDescription="@string/nombre_coche" />

                <Spinner
                    android:id="@+id/spinnerCars"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:popupBackground="@android:color/white"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_flecha_abajo"
                    app:tint="@color/icono_normal"
                    android:contentDescription="@array/lista_coches" />
            </LinearLayout>

            <!-- Imagen del coche sin el MaterialCardView -->
            <ImageView
                android:id="@+id/ivCar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:contentDescription="@string/nombre_coche"
                android:src="@drawable/coche_naranja"
                android:padding="16dp"/>

            <TextView
                android:id="@+id/tvMainState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="@color/texto_oscuro"
                android:textSize="28sp"
                android:fontFamily="@font/montserrat_bold_ttf"
                tools:text="El Champon está cerrado"/>

            <LinearLayout
                android:id="@+id/actionsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/bg_circle_soft"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clipToOutline="true">

                        <ImageView
                            android:id="@+id/ivLock"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp"
                            android:src="@drawable/ic_candado_cerrado"
                            app:tint="@color/icono_normal"
                            android:contentDescription="@string/bloqueado"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/bloqueado"
                        android:textColor="@color/texto_oscuro"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/bg_circle_soft"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clipToOutline="true">

                        <ImageView
                            android:id="@+id/ivCameras"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp"
                            android:src="@drawable/ic_camara"
                            app:tint="@color/icono_normal"
                            android:contentDescription="@string/camara_activada"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/camara_activada"
                        android:textColor="@color/texto_oscuro"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/bg_circle_soft"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clipToOutline="true">

                        <ImageView
                            android:id="@+id/ivSignals"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp"
                            android:src="@drawable/ic_sonido"
                            app:tint="@color/icono_normal"
                            android:contentDescription="@string/senales"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/senales"
                        android:textColor="@color/texto_oscuro"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/bg_circle_soft"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clipToOutline="true">

                        <ImageView
                            android:id="@+id/ivSafe"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp"
                            android:src="@drawable/ic_escudo"
                            app:tint="@color/icono_normal"
                            android:contentDescription="@string/modo_seguro_activado"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/modo_seguro_activado"
                        android:textColor="@color/texto_oscuro"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addressPill"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:background="@drawable/bg_pill_soft"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_ubicacion"
                    app:tint="@color/icono_normal"
                    android:contentDescription="@string/titulo_ubicacion" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/icono_normal"
                    android:textSize="16sp"
                    tools:text="C/ Jardines de Alejandra, Toledo"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
