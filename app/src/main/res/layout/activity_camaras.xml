<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_claro"
    android:padding="16dp">

    <!-- Flecha volver -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_flecha_atras"
        android:tint="@color/icono_normal"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:contentDescription="@string/volver"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Título centrado -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camaras_en_directo"
        android:textColor="@color/icono_normal"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold_ttf"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Panel cámara 1 -->
    <FrameLayout
        android:id="@+id/panelCam1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/camara_superior"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hqdefault"
            android:scaleType="centerCrop"
            android:contentDescription="@string/camara_superior" />
    </FrameLayout>

    <!-- Panel cámara 2 -->
    <FrameLayout
        android:id="@+id/panelCam2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/camara_inferior"
        app:layout_constraintTop_toBottomOf="@id/panelCam1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnHacerFoto"
        app:layout_constraintDimensionRatio="16:9"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hpdefault2"
            android:scaleType="centerCrop"
            android:contentDescription="@string/camara_inferior" />
    </FrameLayout>

    <!-- Botón inferior -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHacerFoto"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/hacer_foto"
        android:textAllCaps="false"
        android:textColor="@color/texto_claro"
        android:fontFamily="@font/montserrat_bold_ttf"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_camara"
        app:iconPadding="12dp"
        app:iconGravity="textStart"
        app:backgroundTint="@color/icono_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
