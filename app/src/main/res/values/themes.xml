<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema principal -->
    <style name="Theme.Proyecto_iot" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores -->
        <item name="colorPrimary">@color/icono_normal</item>
        <item name="colorOnPrimary">@color/texto_claro</item>
        <item name="colorSecondary">@color/texto_secundario</item>

        <!-- Fondo y barra de estado -->
        <item name="android:colorBackground">@color/fondo_claro</item>
        <item name="android:statusBarColor">@color/icono_normal</item>

        <!-- Tipografía -->
        <item name="fontFamily">@font/roboto_regular_ttf</item>
        <item name="android:fontFamily">@font/roboto_regular_ttf</item>

        <!-- Botones personalizados -->
        <item name="buttonStyle">@style/Boton.Proyecto_iot</item>
    </style>

    <!-- Botón personalizado -->
    <style name="Boton.Proyecto_iot" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/texto_claro</item>
        <item name="android:background">@drawable/boton_principal_selector</item>
        <item name="android:fontFamily">@font/montserrat_bold_ttf</item>
    </style>

</resources>
