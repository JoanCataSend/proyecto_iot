<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Proyecto_iot">

        <!-- LAUNCHER: EntryActivity decide Login/Main -->
        <activity
            android:name="com.example.proyecto_iot.EntryActivity"
        android:exported="true"
        android:theme="@style/Theme.Proyecto_iot">
        <intent-filter>
            <action android:name="android.intent.action.MAIN"/>
            <category android:name="android.intent.category.LAUNCHER"/>
        </intent-filter>
    </activity>

    <!-- Pantallas de autenticación (sin navbar/header) -->
    <activity
        android:name="com.example.proyecto_iot.LoginActivity"
        android:exported="false"
        android:theme="@style/Theme.Proyecto_iot"/>
    <activity
        android:name="com.example.proyecto_iot.RegisterActivity"
        android:exported="false"
        android:theme="@style/Theme.Proyecto_iot"/>
    <activity
        android:name="com.example.proyecto_iot.ForgotPasswordActivity"
        android:exported="false"
        android:theme="@style/Theme.Proyecto_iot"/>

    <!-- Main de la app (con navbar/header según tu layout) -->
    <activity
        android:name="com.example.proyecto_iot.MainActivity"
        android:exported="false"
        android:theme="@style/Theme.Proyecto_iot"/>

    <!-- Otras activities existentes (conservadas) -->
    <activity android:name="com.example.proyecto_iot.RegistroCoche"
        android:exported="false"/>
    <activity android:name="com.example.proyecto_iot.CamarasActivity"
        android:exported="false"
        android:label="@string/camara_activada"/>
    <activity android:name="com.example.proyecto_iot.ConfigActivity"
        android:exported="false"
        android:label="@string/ajustes"/>
</application>
    </manifest>
